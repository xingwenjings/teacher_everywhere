<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_FFFFFF"
    tools:context=".ui.main.activity.informent_activity.NameActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:id="@+id/name_toolbar"
        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/name_img"
            android:background="@drawable/back_white"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改昵称"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_333333"
            android:layout_marginLeft="@dimen/dp_120"
            android:layout_marginBottom="@dimen/dp_14"
            />
        <TextView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_19"
            android:text="完成"
            android:id="@+id/finishs"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_FA6A13"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_14"
            />
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="@drawable/view_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/name_select"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/name_et"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="伴米"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_93"
            android:text="27/27"
            android:id="@+id/fin_jian"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"/>

    </RelativeLayout>


</LinearLayout>