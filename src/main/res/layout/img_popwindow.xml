<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/me_sex_select"
        android:layout_marginBottom="@dimen/dp_200"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/string_create"
                android:background="@color/c_FFFFFF"
                android:id="@+id/create"
                android:layout_above="@id/insert"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_000000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gril_line"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:outlineSpotShadowColor="@color/c_F0F0F0"
                android:minWidth="@dimen/dp_1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_FFFFFF"
                android:text="@string/string_picture"
                android:id="@+id/picture"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_000000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/insert_line"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:outlineSpotShadowColor="@color/c_F0F0F0"
                android:layout_alignParentBottom="true"
                android:minWidth="@dimen/dp_1"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="取消"
            android:id="@+id/pop_out"
            android:layout_marginBottom="@dimen/dp_80"
            android:background="@drawable/me_sex_select"

            />
    </RelativeLayout>

</RelativeLayout>
